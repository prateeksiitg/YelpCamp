<%- include("../partials/header") %>
<div class='container'>
	<div class='row'>
		<h1 style="text-align: center;">
			Add a Comment to <%= campground.name %>
		</h1>
	<div style="width: 30%; margin:20px auto;">
			<form action='/campgrounds/<%= campground._id %>/comment' method='POST'>
			
			<div class=form-group>	
				<input class='form-control' type='text' name='comment[text]' placeholder='Comment'>
			</div>
			<button class='btn btn-primary btn-lg'>
				Submit
			</button>
		</form>
		
		<a href="/campgrounds/<%=campground._id%>">Go Back!</a>
	</div>
	</div>	
	

</div>	
<%- include("../partials/footer") %>